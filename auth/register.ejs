<%- include('../partials/header') %>
<h2 class="text-2xl font-bold mb-6">Register</h2>

<form action="/register" method="POST" class="max-w-md">
  <label class="block mb-2">Username</label>
  <input type="text" name="username" class="border p-2 mb-4 w-full" required />
  
  <label class="block mb-2">Phone</label>
  <input type="text" name="phone" class="border p-2 mb-4 w-full" required />
  
  <label class="block mb-2">Password</label>
  <input type="password" name="password" class="border p-2 mb-4 w-full" required />
  
  <label class="block mb-2">Confirm Password</label>
  <input type="password" name="password2" class="border p-2 mb-4 w-full" required />

  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Register</button>
</form>

<%- include('../partials/footer') %>
